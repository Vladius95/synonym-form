{
  "compilerOptions": {
    "module": "es6",
    "target": "es2018",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./ts-build",
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": ["es2018", "dom"],
    "baseUrl": "./",
    "paths": {
      "static/*": ["./static/*"]
    }
  },
  "types": ["node"],
  // "include": ["static/**/*.d.ts", "static/**/*.ts"],
  "exclude": ["node_modules"]
}
